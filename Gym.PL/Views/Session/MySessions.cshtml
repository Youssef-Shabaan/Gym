@using Gym.BLL.ModelVM.MemberSession
@model IEnumerable<GetMemberSessionVM>

@{
    ViewData["Title"] = "My Sessions";

    var orderedModel = Model.OrderBy(s => s.StartTime).ToList();
}

<style>
    .blur-background {
        filter: blur(6px);
        pointer-events: none;
        user-select: none;
    }

    .desc-modal {
        display: none;
        position: fixed;
        z-index: 9999;
        inset: 0;
        background: rgba(0,0,0,0.7);
        backdrop-filter: blur(6px);
        align-items: center;
        justify-content: center;
    }

    .desc-content {
        background: #111;
        color: white;
        padding: 30px;
        border-radius: 12px;
        max-width: 600px;
        width: 90%;
        max-height: 70vh;
        overflow-y: auto;
        text-align: center;
        position: relative;
        box-shadow: 0 0 20px rgba(255,0,0,0.4);
        font-weight: bold;
    }

    #descText {
        color: #fff;
        font-size: 22px;
        font-weight: bold;
        line-height: 1.5;
    }

    .close-btn {
        position: sticky;
        top: 0;
        float: right;
        cursor: pointer;
        font-size: 20px;
        color: #ff3b3b;
        margin-bottom: 10px;
    }

    .card {
        background: #111;
        color: white;
        border-radius: 12px;
        border: 1px solid #d3c2c2;
        box-shadow: 0 0 15px rgba(255,0,0,0.25);
        overflow: hidden;
    }

    .filter-btn {
        transition: 0.3s;
        font-weight: bold;
    }

    .active-filter {
        background-color: #b30000 !important;
        color: white !important;
        box-shadow: 0 0 10px rgba(255,0,0,0.6);
        transform: scale(1.05);
    }

    .session-card {
        opacity: 0;
        transform: translateY(40px);
        transition: 0.4s ease-in-out;
    }

        .session-card.show {
            opacity: 1;
            transform: translateY(0);
        }

    #noSessionsMsg {
        display: none;
        color: #ff3b3b;
        font-size: 26px;
        font-weight: bold;
        text-align: center;
        margin-top: 20px;
    }
</style>

<main id="pageContent">

    <div class="slider-area2">
        <div class="slider-height2 d-flex align-items-center">
            <div class="container">
                <div class="row">
                    <div class="col-xl-12">
                        <div class="hero-cap hero-cap2 pt-70">
                            <h2>My Sessions</h2>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <section class="contact-section">
        <div class="container">

            <div class="text-center mb-4" style="margin:10px;">
                <button class="btn btn-danger mx-2 filter-btn" onclick="filterSessions('finished', this)">Finished Sessions</button>
                <button class="btn btn-danger mx-2 filter-btn" onclick="filterSessions('running', this)">Running Now</button>
                <button class="btn btn-danger mx-2 filter-btn active-filter" onclick="filterSessions('upcoming', this)" id="defaultUpcomingBtn">Upcoming</button>
            </div>

            <div id="noSessionsMsg">No Sessions Found</div>

            <div class="row">

                @if (ViewBag.ErrorMessage != null)
                {
                    <div class="col-12 text-center">
                        <p style="color:#ff3b3b; font-size:22px; font-weight:bold;">
                            @ViewBag.ErrorMessage
                        </p>
                    </div>
                }
                else
                {
                    foreach (var item in orderedModel)
                    {
                        <div class="col-lg-4 col-md-6 mb-4 session-card"
                             data-start="@item.StartTime"
                             data-end="@item.EndTime">

                            <div class="card">

                                @{
                                    var random = new Random();
                                    int number = random.Next(1, 7);
                                    string imagePath = $"~/assets/img/gallery/gallery{number}.png";
                                }

                                <img src="@Url.Content(imagePath)"
                                     class="card-img-top"
                                     style="height: 220px; object-fit: cover;" />

                                <div class="card-body">

                                    <h4 style="color: white; font-weight: 700; text-align: center; font-size: 26px;">
                                        @item.SessionName
                                    </h4>

                                    <p style="color: #ddd;"><strong style="color:#ff3b3b;">Trainer :</strong> @item.TrainerName</p>
                                    <p style="color: #ddd;"><strong style="color:#ff3b3b;">Phone :</strong> @item.TrainerPhone</p>
                                    <p style="color: #ddd;"><strong style="color:#ff3b3b;">Start :</strong> @item.StartTime.ToString("M/d/yyyy h:mm tt")</p>
                                    <p style="color: #ddd;"><strong style="color:#ff3b3b;">End :</strong> @item.EndTime.ToString("M/d/yyyy h:mm tt")</p>
                                    <p style="color: #ddd;"><strong style="color:#ff3b3b;">Booking Date :</strong> @item.BookingDate.ToString("M/d/yyyy h:mm tt")</p>

                                    <a href="javascript:void(0)"
                                       onclick="openDescription(`@Html.Raw((item.SessionDescription ?? "").Replace("`", ""))`)"
                                       class="btn btn-outline-danger w-100 mt-2"
                                       style="font-weight:bold;">
                                        View Description
                                    </a>

                                </div>
                            </div>

                        </div>
                    }
                }
            </div>
        </div>
    </section>

</main>

<div id="descModal" class="desc-modal">
    <div class="desc-content">
        <span class="close-btn" onclick="closeDescription()">🗙</span>
        <p id="descText"></p>
    </div>
</div>

@section Scripts {
    <script>
        function openDescription(text) {
            document.getElementById('descText').innerText = text;
            document.getElementById('descModal').style.display = 'flex';
            document.getElementById('pageContent').classList.add('blur-background');
        }

        function closeDescription() {
            document.getElementById('descModal').style.display = 'none';
            document.getElementById('pageContent').classList.remove('blur-background');
        }

        function filterSessions(type, button) {

            const now = new Date();
            const cards = document.querySelectorAll(".session-card");
            const msg = document.getElementById("noSessionsMsg");
            let visibleCount = 0;

            document.querySelectorAll(".filter-btn").forEach(btn => btn.classList.remove("active-filter"));
            button.classList.add("active-filter");

            cards.forEach(card => {

                let start = new Date(card.getAttribute("data-start"));
                let end = new Date(card.getAttribute("data-end"));
                let show = false;

                if (type === "finished" && end < now) show = true;
                else if (type === "running" && start <= now && end >= now) show = true;
                else if (type === "upcoming" && start > now) show = true;

                if (show) {
                    visibleCount++;
                    card.style.display = "block";
                    setTimeout(() => card.classList.add("show"), 10);
                } else {
                    card.classList.remove("show");
                    setTimeout(() => card.style.display = "none", 300);
                }
            });

            msg.style.display = visibleCount === 0 ? "block" : "none";
        }

        window.onload = function () {
            const btn = document.getElementById("defaultUpcomingBtn");
            filterSessions('upcoming', btn);
        };
    </script>
}
