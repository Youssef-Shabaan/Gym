@using Gym.BLL.ModelVM.Admin

@model SystemVM

@{
    Layout = "~/Views/Shared/_AdminDashboard.cshtml";
    ViewData["Title"] = "Dashboard Metrics";
}

<div class="container-fluid pt-4 px-4">

    <div class="row g-4 mb-4">
        <div class="col-12">
            <div class="bg-dark rounded p-3 shadow-sm">
                <h2 class="text-white mb-0">System Overview</h2>
                <p class="text-secondary mb-0">Navigate the core sections and monitor the operational metrics.</p>
            </div>
        </div>
    </div>

    <div class="row g-4">

        <div class="col-sm-6 col-xl-3">
            <div class="bg-dark rounded d-flex align-items-center justify-content-between p-4 shadow">
                <i class="fa fa-user-check fa-3x text-primary"></i>
                <div class="ms-3">
                    <p class="mb-2 text-white-50">Active Members</p>
                    <h6 class="mb-0 text-white">@Model.members</h6>
                </div>
            </div>
        </div>

        <div class="col-sm-6 col-xl-3">
            <div class="bg-dark rounded d-flex align-items-center justify-content-between p-4 shadow">
                <i class="fa fa-chalkboard-teacher fa-3x text-info"></i>
                <div class="ms-3">
                    <p class="mb-2 text-white-50">Total Trainers</p>
                    <h6 class="mb-0 text-white">@Model.trainers</h6>
                </div>
            </div>
        </div>

        <div class="col-sm-6 col-xl-3">
            <div class="bg-dark rounded d-flex align-items-center justify-content-between p-4 shadow">
                <i class="fa fa-running fa-3x text-success"></i>
                <div class="ms-3">
                    <p class="mb-2 text-white-50">Recorded Sessions</p>
                    <h6 class="mb-0 text-white">@Model.sessions</h6>
                </div>
            </div>
        </div>

        <div class="col-sm-6 col-xl-3">
            <div class="bg-dark rounded d-flex align-items-center justify-content-between p-4 shadow">
                <i class="fa fa-calendar-check fa-3x text-warning"></i>
                <div class="ms-3">
                    <p class="mb-2 text-white-50">Available Plans</p>
                    <h6 class="mb-0 text-white">@Model.plans</h6>
                </div>
            </div>
        </div>
    </div>

    <div class="row g-4 mt-4">
        <div class="col-12">
            <div class="bg-dark rounded h-100 p-4 shadow">
                <h6 class="mb-4 text-white">Quick Management Links</h6>
                <p class="text-white-50">Use the navigation bar or the links below to start managing the system:</p>
                <a asp-controller="AdminMember" asp-action="Index" class="btn btn-primary me-2 mb-2">Manage Members</a>
                <a asp-controller="AdminTrainer" asp-action="Index" class="btn btn-info me-2 mb-2">Manage Trainers</a>
                <a asp-controller="AdminSession" asp-action="Index" class="btn btn-success me-2 mb-2">Manage Sessions</a>
                <a asp-controller="AdminPlan" asp-action="Index" class="btn btn-warning me-2 mb-2">Manage Plans</a>
            </div>
        </div>
    </div>

</div>