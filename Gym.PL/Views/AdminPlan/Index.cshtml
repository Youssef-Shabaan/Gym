@using Gym.BLL.ModelVM.Plan
@model List<GetPlanVM>
<style>
    .custom-btn {
        transition: background-color 0.3s ease;
    }

        .custom-btn:hover {
            background-color: #970101 !important;
            border-color: #970101 !important;
        }
</style>
@{
    ViewData["Title"] = "Plans";
    Layout = "~/Views/Shared/_AdminDashboard.cshtml";
}
    <div class="d-sm-flex align-items-center justify-content-between mb-4">
        <h1 class="h3 mb-0 text-gray-800">Plans</h1>
        <a asp-controller="AdminPlan" asp-action="Create" class="custom-btn d-none d-sm-inline-block btn btn-sm btn-primary shadow-sm">
            <i class="fas fa-user-plus fa-sm text-white-50"></i>
            Add Plan
        </a>
    </div>


    <div class="row">
        <div class="col-12">
            <div class="card shadow mb-4">
                <div class="card-header py-3 d-flex flex-row align-items-center justify-content-between">
                    <h6 class="m-0 font-weight-bold text-primary">All Plan</h6>
                </div>
                <div class="card-body">
                @{
                    int i = 1;
                }
                    <table id="myTable">
                        <thead>
                            <tr>
                                <th style="text-align:center">Id</th>
                                <th style="text-align:left">Name</th>
                                <th style="text-align:left">Trainer Name</th>
                                <th style="text-align:center">Start Time</th>
                                <th style="text-align:center">End Time</th>
                                <th style="text-align:center">Status</th>
                                <th style="text-align:center">Price</th>
                                <th style ="text-align:center">Capacity</th>
                                <th style ="text-align:center">Booked</th>
                                <th style="text-align:center">Members</th>
                                <th style="text-align:center">Sessions</th>
                                <th style="text-align:center">Operations</th>
                            </tr>
                        </thead>
                        <tbody>
                        @foreach (var plan in Model)
                        {
                                    <tr>
                                        <td style="text-align:center">@i</td>
                                            <td style="text-align:left">@plan.Name</td>
                                            <td style="text-align:left">@plan.TrainerName</td>
                                            <td style="text-align:center">@plan.StartDate.ToString("yyyy-MM-dd HH:mm")</td>
                                            <td style="text-align:center">@plan.EndDate.ToString("yyyy-MM-dd HH:mm")</td>
                                        <td style="text-align:center">
                                    @if (plan.Status == "Not Started")
                                    {
                                                            <span class="badge badge-primary" style="font-size:14px;color:white">@plan.Status</span>
                                    }
                                    else if (plan.Status == "Ongoing")
                                    {
                                                            <span class="badge badge-success" style="font-size:14px;color:white">@plan.Status</span>
                                    }
                                    else if (plan.Status == "Ended")
                                    {
                                                            <span class="badge badge-danger" style="font-size:14px;color:white">@plan.Status</span>
                                    }
                                        </td>
                                            <td style="text-align:center">@plan.Price</td>
                                            <td style="text-align:center">@plan.Capcity</td>
                                            <td style="text-align:center">@plan.Booked</td>
                                        <td style="text-align:center"><a asp-controller="AdminPlan" asp-action="GetMembersForPlan" asp-route-id="@plan.Id">Click here</a></td>
                                        <td style="text-align:center"><a asp-controller="AdminPlan" asp-action="GetSessionsForPlan" asp-route-id="@plan.Id">Click here</a></td>
                                        <td style="text-align:center">
                                                    <a asp-controller="AdminPlan" asp-action="AddSessiontoPlan" asp-route-id="@plan.Id" style="color:#858796; margin:0 10px">
        <i class="fas fa-plus fa-sm"></i>
    </a>

                                                <a asp-controller="AdminPlan" asp-action="Edit" asp-route-id="@plan.Id" style="color:#858796; margin:0 10px"> <i class="fas fa-edit fa-sm"></i></a>
                                                <a href="#" class="delete-btn" data-id="@plan.Id" data-toggle="modal" data-target="#deleteConfirmModal" style="color:#858796; margin:0 10px">
                                                <i class="fas fa-trash fa-sm"></i>
                                            </a>
                                        </td>
                                    </tr>
                            i++;
                        }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>



