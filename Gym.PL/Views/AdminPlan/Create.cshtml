@using Gym.BLL.ModelVM.Plan
@model AddPlanVM

@{
    ViewData["Title"] = "Add Plan";
    Layout = "~/Views/Shared/_AdminDashboardCRUD.cshtml";
}
<style>
    .custom-btn, .btn-primary {
        background-color: #ff3b3b !important;
        border-color: #ff3b3b !important;
        transition: all 0.3s ease;
    }

        .custom-btn:hover, .btn-primary:hover {
            background-color: #e60000 !important;
            border-color: #e60000 !important;
            box-shadow: 0 4px 10px rgba(255, 59, 59, 0.3);
        }

    .card-header .text-primary {
        color: #ff3b3b !important;
        font-weight: 700;
    }

    .input-group-text {
        background-color: #eee;
        border-right: none;
        border-color: #ccc;
        min-width: 40px; 
        justify-content: center;
    }

    .form-control {
        border-left: none;
    }

    .text-danger {
        color: #dc3545 !important;
        font-weight: bold;
        display: block;
        margin-top: 5px;
    }

    .form-control.input-validation-error {
        border-color: #dc3545 !important;
    }

    .custom-btn {
        color: white !important;
    }

        .custom-btn i {
            color: white !important;
        }

    .btn-secondary {
        background-color: #6c757d !important;
        border-color: #6c757d !important;
        color: white !important;
        transition: all 0.3s ease;
    }

        .btn-secondary:hover {
            background-color: #5a6268 !important;
            border-color: #5a6268 !important;
        }

    .border-left-primary {
        border-left: 4px solid #ff3b3b !important;
    }
</style>


@if (ViewBag.ErrorMessage != null)
{
    <div class="alert alert-danger mb-4" role="alert">@ViewBag.ErrorMessage</div>
}

<div class="d-sm-flex align-items-center justify-content-between mb-4">
    <h1 class="h3 mb-0 text-gray-800">Plans Management</h1>
    <a asp-controller="AdminPlan" asp-action="Index" class="custom-btn d-none d-sm-inline-block btn btn-sm shadow-sm">
        <i class="fas fa-arrow-left fa-sm me-1"></i>
        Back to Plans List
    </a>
</div>

<div class="row">
    <div class="col-12">
        <div class="card shadow mb-4">
            <div class="card-header py-3 d-flex flex-row align-items-center justify-content-between">
                <h6 class="m-0 font-weight-bold text-primary">Add New Plan</h6>
            </div>
            <div class="card-body">
                <form asp-action="Create" asp-controller="AdminPlan" method="post" class="needs-validation">

                    <div asp-validation-summary="ModelOnly" class="alert alert-danger mb-4" role="alert">
                        Please fix the following errors before submitting:
                    </div>

                    <div class="card shadow mb-4 border-left-primary">
                        <div class="card-header py-3">
                            <h6 class="m-0 font-weight-bold text-primary"><i class="fas fa-dumbbell"></i> Plan Details</h6>
                        </div>
                        <div class="card-body">
                            <div class="row">
                                <div class="form-group col-md-8 mb-3">
                                    <label asp-for="Name" class="form-label">Plan Name</label>
                                    <div class="input-group">
                                        <span class="input-group-text"><i class="fas fa-heading"></i></span>
                                        <input asp-for="Name" class="form-control" placeholder="Enter plan name " />
                                    </div>
                                    <span asp-validation-for="Name" class="text-danger"></span>
                                </div>
                                <div class="form-group col-md-4 mb-3">
                                    <label asp-for="TrainerId" class="form-label">Assigned Trainer</label>
                                    <div class="input-group">
                                        <span class="input-group-text"><i class="fas fa-chalkboard-teacher"></i></span>
                                        <select asp-for="TrainerId" class="form-control">
                                            <option value="">-- Select Trainer --</option>
                                            @foreach (var item in Model.Trainers)
                                            {
                                                <option value="@item.TrainerId">@item.Name</option>
                                            }
                                        </select>
                                    </div>
                                    <span asp-validation-for="TrainerId" class="text-danger"></span>
                                </div>
                            </div>

                            <div class="form-group mb-3">
                                <label asp-for="Description" class="form-label">Description</label>
                                <textarea asp-for="Description" class="form-control" rows="3" placeholder="Optional details about the plan..."></textarea>
                                <span asp-validation-for="Description" class="text-danger"></span>
                            </div>
                        </div>
                    </div>

                    <div class="card shadow mb-4 border-left-primary">
                        <div class="card-header py-3">
                            <h6 class="m-0 font-weight-bold text-primary"><i class="fas fa-clock"></i> Schedule and Capacity</h6>
                        </div>
                        <div class="card-body">
                            <div class="row">
                                <div class="form-group col-md-6 mb-3">
                                    <label asp-for="StartDate" class="form-label">Start Time</label>
                                    <div class="input-group">
                                        <span class="input-group-text"><i class="fas fa-calendar-day"></i></span>
                                        <input asp-for="StartDate" type="datetime-local" class="form-control" step="60"
                                               value="@(Model.StartDate != default(DateTime) ? Model.StartDate.ToString("yyyy-MM-ddTHH:mm") : "")" />
                                    </div>
                                    <span asp-validation-for="StartDate" class="text-danger"></span>
                                </div>

                                <div class="form-group col-md-6 mb-3">
                                    <label asp-for="EndDate" class="form-label">End Time</label>
                                    <div class="input-group">
                                        <span class="input-group-text"><i class="fas fa-calendar-alt"></i></span>
                                        <input asp-for="EndDate" type="datetime-local" class="form-control" step="60"
                                               value="@(Model.EndDate != default(DateTime) ? Model.EndDate.ToString("yyyy-MM-ddTHH:mm") : "")" />
                                    </div>
                                    <span asp-validation-for="EndDate" class="text-danger"></span>
                                </div>
                            </div>

                            <div class="row mt-3">
                                <div class="form-group col-md-6 mb-3">
                                    <label asp-for="Price" class="form-label">Price</label>
                                    <div class="input-group">
                                        <span class="input-group-text"><i class="fas fa-tag"></i></span>
                                        <input asp-for="Price" class="form-control" placeholder="Plan Price (e.g., 99.99)" />
                                    </div>
                                    <span asp-validation-for="Price" class="text-danger"></span>
                                </div>

                                <div class="form-group col-md-6 mb-3">
                                    <label asp-for="Capcity" class="form-label">Capacity</label>
                                    <div class="input-group">
                                        <span class="input-group-text"><i class="fas fa-users"></i></span>
                                        <input asp-for="Capcity" type="number" class="form-control" placeholder="Maximum number of members" />
                                    </div>
                                    <span asp-validation-for="Capcity" class="text-danger"></span>
                                </div>
                            </div>
                        </div>
                    </div>

                    <div class="form-group text-center mt-4">
                        <button type="submit" class="custom-btn btn btn-primary btn-lg px-5">
                            <i class="fas fa-plus me-1"></i> Add Plan
                        </button>
                        <a asp-action="Index" class="btn btn-secondary btn-lg px-5">
                            Cancel
                        </a>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}