@using Gym.BLL.ModelVM.MemberPlan
@model IEnumerable<GetMembersForPlanVM>

@{
    ViewData["Title"] = "Plan Members List";
    Layout = "~/Views/Shared/_TrainerDashboard.cshtml";
}

<style>
    .member-img {
        width: 50px;
        height: 50px;
        object-fit: cover;
        border-radius: 50%;
        border: 2px solid #007bff;
    }

    .img-placeholder {
        background-color: #6c757d;
        color: white;
        text-align: center;
        width: 50px;
        height: 50px;
        border-radius: 50%;
        display: flex;
        align-items: center;
        justify-content: center;
    }
</style>

<div class="container-fluid mt-4">
    <h2 class="mb-4 text-primary"><i class="fa fa-users"></i> Plan Members</h2>
    <hr />

    <div class="card shadow">
        <div class="card-body p-0">
            @if (!Model.Any())
            {
                        <div class="alert alert-info text-center m-4">
                            No members are currently registered for this plan.
                        </div>
            }
            else
            {
                        <div class="table-responsive">
                            <table class="table table-striped table-hover mb-0">
                                <thead class="thead-dark">
                                    <tr>
                                        <th>Image</th>
                                        <th>Name</th>
                                        <th>Email</th>
                                        <th>Phone</th>
                                        <th>Address</th>
                                        <th>Age</th>
                                        <th>Gender</th>
                                    </tr>
                                </thead>
                                <tbody>
                            @foreach (var item in Model)
                            {
                                                <tr>
                                                    <td class="align-middle">
                                        @if (!string.IsNullOrEmpty(item.MemberPhoto))
                                        {
                                                                    <img src="~/Files/@item.MemberPhoto" alt="@item.MemberUserName" class="member-img">
                                        }
                                        else
                                        {
                                                                    <div class="member-img img-placeholder">
                                                                        <i class="fa fa-user"></i>
                                                                    </div>
                                        }
                                                    </td>

                                                    <td class="font-weight-bold align-middle">@item.MemberUserName</td>
                                                    <td class="font-weight-bold align-middle">@item.MemberEmail</td>
                                                    <td class="align-middle">@item.MemberPhone</td>
                                                    <td class="align-middle">@item.MemberAddress</td>
                                                    <td class="align-middle">@item.MemberAge</td>
                                                    <td class="align-middle">@item.MemberGender</td>

                                                  
                                                </tr>
                            }
                                </tbody>
                            </table>
                        </div>
            }
        </div>
    </div>
</div>

