@{
    ViewData["Title"] = "Home";
}
<main>
    <!--? Slider Area Start -->
    <div class="slider-area position-relative">
        <div class="slider-active">
            <!-- Single Slider -->
            <div class="single-slider slider-height d-flex align-items-center">
                <div class="container">
                    <div class="row">
                        <div class="col-xl-9 col-lg-9 col-md-10">
                            <div class="hero__caption">
                                <span data-animation="fadeInLeft" data-delay="0.1s" style="animation-delay: 0.1s;">
                                    Welcome to
                                </span>
                                <h1 data-animation="fadeInLeft" data-delay="0.4s" style="animation-delay: 0.4s;">
                                    FitHub Gym
                                </h1>
                                <a href="sessions.html" class="border-btn hero-btn" data-animation="fadeInLeft" data-delay="0.8s">
                                    Explore Sessions
                                </a>
                            </div>
                        </div>
                    </div>
                </div>          
            </div>
        </div>
    </div>
    <!-- Slider Area End -->

    <!--? Services / What We Offer -->
    <section class="team-area fix">
        <div class="container">
            <div class="row">
                <div class="col-xl-12">
                    <div class="section-tittle text-center mb-55 wow fadeInUp" data-wow-duration="1s" data-wow-delay=".1s">
                        <h2>What We Offer</h2>
                    </div>
                </div>
            </div>
            <div class="row">
                <!-- Body Building -->
                <div class="col-lg-4 col-md-6">
                    <div class="single-cat text-center mb-30 wow fadeInUp" data-wow-duration="1s" data-wow-delay=".2s">
                        <div class="cat-icon">
                            <img src="assets/img/gallery/team1.png" alt="">
                        </div>
                        <div class="cat-cap">
                            <h5><a href="services.html">Body Building</a></h5>
                            <p>Build muscle and strength with our expert trainers and personalized plans.</p>
                        </div>
                    </div>
                </div>
                <!-- Muscle Gain -->
                <div class="col-lg-4 col-md-6">
                    <div class="single-cat text-center mb-30 wow fadeInUp" data-wow-duration="1s" data-wow-delay=".4s">
                        <div class="cat-icon">
                            <img src="assets/img/gallery/team2.png" alt="">
                        </div>
                        <div class="cat-cap">
                            <h5><a href="services.html">Muscle Gain</a></h5>
                            <p>Reach your ideal physique with structured muscle gain programs at FitHub.</p>
                        </div>
                    </div>
                </div>
                <!-- Weight Loss -->
                <div class="col-lg-4 col-md-6">
                    <div class="single-cat text-center mb-30 wow fadeInUp" data-wow-duration="1s" data-wow-delay=".6s">
                        <div class="cat-icon">
                            <img src="assets/img/gallery/team3.png" alt="">
                        </div>
                        <div class="cat-cap">
                            <h5><a href="services.html">Weight Loss</a></h5>
                            <p>Lose weight effectively with guided nutrition and professional workout plans.</p>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>
    <!-- Services End -->

    <!--? About Area Start -->
    <section class="about-area2 fix pb-padding pt-50 pb-80">
        <div class="support-wrapper align-items-center">
            <div class="right-content2">
                <!-- img -->
                <div class="right-img wow fadeInUp" data-wow-duration="1s" data-wow-delay=".1s">
                    <img src="assets/img/gallery/about.png" alt="">
                </div>
            </div>
            <div class="left-content2">
                <!-- section title -->
                <div class="section-tittle2 mb-20 wow fadeInUp" data-wow-duration="1s" data-wow-delay=".3s">
                    <div class="front-text">
                        <h2>About FitHub</h2>
                        <p>At FitHub Gym, we believe fitness is a lifestyle. Our mission is to help you reach your full potential through effective training, balanced nutrition, and community support.</p>
                        <p class="mb-40">Join FitHub today and start your transformation with expert trainers, modern equipment, and motivating programs tailored to your goals.</p>
                        <a href="sessions.html" class="border-btn">Join Now</a>
                    </div>
                </div>
            </div>
        </div>
    </section>
    <!-- About Area End -->

    <!--? Contact Info -->
    <section class="services-area">
        <div class="container">
            <div class="row justify-content-between">
                <!-- Location -->
                <div class="col-xl-4 col-lg-4 col-md-6 col-sm-8">
                    <div class="single-services mb-40 wow fadeInUp" data-wow-duration="1s" data-wow-delay=".1s">
                        <div class="features-icon">
                            <img src="assets/img/icon/icon1.png" alt="">
                        </div>
                        <div class="features-caption">
                            <h3>Location</h3>
                            <p>123 Fitness Street, Qena, Egypt</p>
                        </div>
                    </div>
                </div>
                <!-- Phone -->
                <div class="col-xl-3 col-lg-4 col-md-6 col-sm-8">
                    <div class="single-services mb-40 wow fadeInUp" data-wow-duration="1s" data-wow-delay=".2s">
                        <div class="features-icon">
                            <img src="assets/img/icon/icon2.png" alt="">
                        </div>
                        <div class="features-caption">
                            <h3>Phone</h3>
                            <p>(+20) 100 123 4567</p>
                            <p>(+20) 111 987 6543</p>
                        </div>
                    </div>
                </div>
                <!-- Email -->
                <div class="col-xl-3 col-lg-4 col-md-6 col-sm-8">
                    <div class="single-services mb-40 wow fadeInUp" data-wow-duration="2s" data-wow-delay=".4s">
                        <div class="features-icon">
                            <img src="assets/img/icon/icon3.png" alt="">
                        </div>
                        <div class="features-caption">
                            <h3>Email</h3>
                            <p>info@fithub.com</p>
                            <p>support@fithub.com</p>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>
</main>
