@using Gym.BLL.ModelVM.Session
@model List<GetSessionVM>
<style>
    .custom-btn {
        transition: background-color 0.3s ease;
    }

        .custom-btn:hover {
            background-color: #970101 !important;
            border-color: #970101 !important;
        }
</style>
@{
    ViewData["Title"] = "Sessions";
    Layout = "~/Views/Shared/_AdminDashboard.cshtml";
}
    <div class="d-sm-flex align-items-center justify-content-between mb-4">
        <h1 class="h3 mb-0 text-gray-800">Sessions</h1>
        <a asp-controller="AdminSession" asp-action="Add" class="custom-btn d-none d-sm-inline-block btn btn-sm btn-primary shadow-sm">
            <i class="fas fa-user-plus fa-sm text-white-50"></i>
            Add Session
        </a>
    </div>


    <div class="row">
        <div class="col-12">
            <div class="card shadow mb-4">
                <div class="card-header py-3 d-flex flex-row align-items-center justify-content-between">
                    <h6 class="m-0 font-weight-bold text-primary">All Sessions</h6>
                </div>
                <div class="card-body">
                    @{
                        int i = 1;
                    }
                    <table id="myTable">
                        <thead>
                            <tr>
                                <th style="text-align:center">Id</th>
                                <th style="text-align:left">Name</th>
                                <th style="text-align:left">Trainer Name</th>
                                <th style="text-align:center">Start Time</th>
                                <th style="text-align:center">End Time</th>
                                <th style="text-align:center">Status</th>
                                <th style="text-align:center">Price</th>
                                <th style="text-align:center">Operations</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var session in Model)
                            {
                                <tr>
                                    <td style="text-align:center">@i</td>
                                    <td style="text-align:left">@session.Name</td>
                                    <td style="text-align:left">@session.TrainerName</td>
                                    <td style="text-align:center">@session.StartTime.ToString("yyyy-MM-dd HH:mm")</td>
                                    <td style="text-align:center">@session.EndTime.ToString("yyyy-MM-dd HH:mm")</td>
                                    <td style="text-align:center">
                                        @if (session.Status == "Not Started")
                                        {
                                            <span class="badge badge-primary" style="font-size:14px;color:white">@session.Status</span>
                                        }
                                        else if (session.Status == "Ongoing")
                                        {
                                            <span class="badge badge-success" style="font-size:14px;color:white">@session.Status</span>
                                        }
                                        else if (session.Status == "Ended")
                                        {
                                            <span class="badge badge-danger" style="font-size:14px;color:white">@session.Status</span>
                                        }
                                    </td>
                                <td style="text-align:center">@session.Price</td>
                                    <td style="text-align:center">
                                        <a asp-controller="AdminSession" asp-action="Edit" asp-route-id="@session.Id" style="color:#858796; margin:0 10px"> <i class="fas fa-edit fa-sm"></i></a>
                                        <a href="#" class="delete-btn" data-id="@session.Id" data-toggle="modal" data-target="#deleteConfirmModal" style="color:#858796; margin:0 10px">
                                            <i class="fas fa-trash fa-sm"></i>
                                        </a>
                                    </td>
                                </tr>
                                i++;
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>



