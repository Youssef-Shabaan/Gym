@using Gym.BLL.ModelVM.Session
@model UpdateSessionVM
@{
    ViewData["Title"] = "Edit Session";
    Layout = "~/Views/Shared/_AdminDashboardCRUD.cshtml";
}
<style>
    .custom-btn, .btn-primary {
        background-color: #ff3b3b !important;
        border-color: #ff3b3b !important;
        transition: all 0.3s ease;
    }

        .custom-btn:hover, .btn-primary:hover {
            background-color: #e60000 !important;
            border-color: #e60000 !important;
            box-shadow: 0 4px 10px rgba(255, 59, 59, 0.3);
        }

    .card-header .text-primary {
        color: #ff3b3b !important;
        font-weight: 700;
    }

    .input-group-text {
        background-color: #eee;
        border-right: none;
        border-color: #ccc;
    }

    .form-control {
        border-left: none;
    }

    .text-danger {
        color: #dc3545 !important;
        font-weight: bold;
        display: block;
        margin-top: 5px;
    }

    .form-control.input-validation-error {
        border-color: #dc3545 !important;
    }

    .custom-btn {
        color: white !important;
    }

        .custom-btn i {
            color: white !important;
        }
</style>

@if (ViewBag.ErrorMessage != null)
{
    <div class="alert alert-danger mb-4" role="alert">@ViewBag.ErrorMessage</div>
}

<div class="d-sm-flex align-items-center justify-content-between mb-4">
    <h1 class="h3 mb-0 text-gray-800">Sessions</h1>
    <a asp-controller="AdminSession" asp-action="Index" class="custom-btn d-none d-sm-inline-block btn btn-sm shadow-sm">
        <i class="fas fa-arrow-left fa-sm me-1"></i>
        Back
    </a>
</div>

<div class="row">
    <div class="col-12">
        <div class="card shadow mb-4">
            <div class="card-header py-3 d-flex flex-row align-items-center justify-content-between">
                <h6 class="m-0 font-weight-bold text-primary">Edit Session</h6>
            </div>
            <div class="card-body">
                <form class="col-12" asp-action="Edit" asp-controller="AdminSession" enctype="multipart/form-data">

                    <div asp-validation-summary="ModelOnly" class="alert alert-danger mb-4" role="alert">
                        **Please fix the following errors before saving.**
                    </div>

                    @Html.HiddenFor(model => model.Id)

                    <div class="card shadow mb-4 border-left-primary" style="border-left: 4px solid #ff3b3b;">
                        <div class="card-header py-3">
                            <h6 class="m-0 font-weight-bold text-primary"><i class="fas fa-dumbbell"></i> Session Information</h6>
                        </div>
                        <div class="card-body">
                            <div class="row">
                                <div class="form-group col-md-6 mb-3">
                                    <label asp-for="Name" class="control-label"></label>
                                    <div class="input-group">
                                        <span class="input-group-text"><i class="fas fa-heading"></i></span>
                                        <input asp-for="Name" class="form-control" placeholder="Session Name" />
                                    </div>
                                    <span asp-validation-for="Name" class="text-danger"></span>
                                </div>
                                <div class="form-group col-md-6 mb-3">
                                    <label asp-for="Description" class="control-label"></label>
                                    <div class="input-group">
                                        <span class="input-group-text"><i class="fas fa-file-alt"></i></span>
                                        <textarea asp-for="Description" class="form-control" placeholder="Session Description"></textarea>
                                    </div>
                                    <span asp-validation-for="Description" class="text-danger"></span>
                                </div>
                            </div>
                        </div>
                    </div>


                    <div class="card shadow mb-4 border-left-primary" style="border-left: 4px solid #ff3b3b;">
                        <div class="card-header py-3">
                            <h6 class="m-0 font-weight-bold text-primary"><i class="fas fa-clock"></i> Schedule and Pricing</h6>
                        </div>
                        <div class="card-body">
                            <div class="row">
                                <div class="form-group col-md-6 mb-3">
                                    <label asp-for="StartTime" class="control-label"></label>
                                    <div class="input-group">
                                        <span class="input-group-text"><i class="fas fa-calendar-day"></i></span>
                                        <input asp-for="StartTime" type="datetime-local" class="form-control"
                                               value="@(Model.StartTime != default(DateTime) ? Model.StartTime.ToString("yyyy-MM-ddTHH:mm") : "")" />
                                    </div>
                                    <span asp-validation-for="StartTime" class="text-danger"></span>
                                </div>
                                <div class="form-group col-md-6 mb-3">
                                    <label asp-for="EndTime" class="control-label"></label>
                                    <div class="input-group">
                                        <span class="input-group-text"><i class="fas fa-calendar-alt"></i></span>
                                        <input asp-for="EndTime" type="datetime-local" class="form-control"
                                               value="@(Model.EndTime != default(DateTime) ? Model.EndTime.ToString("yyyy-MM-ddTHH:mm") : "")" />
                                    </div>
                                    <span asp-validation-for="EndTime" class="text-danger"></span>
                                </div>
                            </div>

                            <div class="row mt-3">
                                <div class="form-group col-md-6 mb-3">
                                    <label asp-for="Price" class="control-label"></label>
                                    <div class="input-group">
                                        <span class="input-group-text"><i class="fas fa-tag"></i></span>
                                        <input asp-for="Price" class="form-control" placeholder="Price" />
                                    </div>
                                    <span asp-validation-for="Price" class="text-danger"></span>
                                </div>
                                <div class="form-group col-md-6 mb-3">
                                    <label asp-for="Capactiy" class="control-label"></label>
                                    <div class="input-group">
                                        <span class="input-group-text"><i class="fas fa-users"></i></span>
                                        <input asp-for="Capactiy" class="form-control" placeholder="Capacity" />
                                    </div>
                                    <span asp-validation-for="Capactiy" class="text-danger"></span>
                                </div>
                            </div>
                        </div>
                    </div>

                    <div class="form-group text-center mt-4">
                        <input type="submit" value="Save Changes" class="custom-btn btn btn-primary btn-lg px-5" />
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>
@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}