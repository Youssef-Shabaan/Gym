@using Gym.BLL.ModelVM.MemberSession
@model IEnumerable<GetMembersForSession>

@{
    ViewData["Title"] = "Session Members List";
    Layout = "~/Views/Shared/_AdminDashboard.cshtml";
}

<style>
    .member-img {
        width: 50px;
        height: 50px;
        object-fit: cover;
        border-radius: 50%;
        border: 2px solid #007bff;
    }

    .img-placeholder {
        background-color: #6c757d;
        color: white;
        text-align: center;
        width: 50px;
        height: 50px;
        border-radius: 50%;
        display: flex;
        align-items: center;
        justify-content: center;
    }
</style>

<div class="container-fluid mt-4">
    <h2 class="mb-4 text-primary"><i class="fa fa-users"></i> Session Members</h2>
    <hr />

    <div class="card shadow">
        <div class="card-body p-0">
            @if (!Model.Any())
            {
                <div class="alert alert-info text-center m-4">
                    No members are currently registered for this session.
                </div>
            }
            else
            {
                <div class="table-responsive">
                    <table class="table table-striped table-hover mb-0">
                        <thead class="thead-dark">
                            <tr>
                                <th>Image</th>
                                <th>Name</th>
                                <th>Email</th>
                                <th>Phone</th>
                                <th>Address</th>
                                <th>Age</th>
                                <th>Gender</th>
                                <th>Options</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {
                                <tr>
                                    <td class="align-middle">
                                        @if (!string.IsNullOrEmpty(item.MemberPhoto))
                                        {
                                            <img src="~/Files/@item.MemberPhoto" alt="@item.MemberUserName" class="member-img">
                                        }
                                        else
                                        {
                                            <div class="member-img img-placeholder">
                                                <i class="fa fa-user"></i>
                                            </div>
                                        }
                                    </td>
                                    <td class="font-weight-bold align-middle">@item.MemberUserName</td>
                                    <td class="font-weight-bold align-middle">@item.MemberEmail</td>
                                    <td class="align-middle">@item.MemberPhone</td>
                                    <td class="align-middle">@item.MemberAddress</td>
                                    <td class="align-middle">@item.MemberAge</td>
                                    <td class="align-middle">@item.MemberGender</td>
                                    <td class="align-middle">
                                        <a href="#"
                                           class="btn btn-sm btn-danger delete-member-btn"
                                           data-id="@item.MemberSessionId"
                                           data-toggle="modal"
                                           data-target="#deleteMemberConfirmModal"
                                           title="Delete member from session">
                                            <i class="fa fa-trash"></i>
                                        </a>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            }
        </div>
    </div>
</div>


<div class="modal fade" id="deleteMemberConfirmModal" tabindex="-1" role="dialog" aria-labelledby="deleteModalLabel" aria-hidden="true">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="deleteModalLabel">Delete Confirmation</h5>
                <button class="close" type="button" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">×</span>
                </button>
            </div>
            <div class="modal-body">
                Are you sure you want to remove this member from the session?
                <br />
                <strong class="text-danger">This action cannot be undone.</strong>
            </div>
            <div class="modal-footer">
                <button class="btn btn-secondary" type="button" data-dismiss="modal">Cancel</button>
                <a id="confirmDeleteMemberBtn" class="btn btn-danger"
                   asp-controller="AdminSession"
                   asp-action="DeleteMemberFromSession">
                    Delete
                </a>
            </div>
        </div>
    </div>
</div>


@section Scripts {
    <script>
        document.querySelectorAll('.delete-member-btn').forEach(btn => {
            btn.addEventListener('click', function () {

                const memberSessionId = this.getAttribute('data-id');

                const deleteBtn = document.getElementById('confirmDeleteMemberBtn');

                deleteBtn.setAttribute('href', `/AdminSession/DeleteMemberFromSession?Id=${memberSessionId}`);
            });
        });
    </script>
}