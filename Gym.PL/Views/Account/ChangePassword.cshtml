@using Gym.BLL.ModelVM.Account
@model ChangePasswordVM

@{
    ViewData["Title"] = "Change Password";
}

<style>
    .text-danger:empty {
        background: none !important;
        padding: 0 !important;
    }

    .text-danger:not(:empty) {
        background-color: rgba(255, 0, 0, 0.1);
        padding: 5px 10px;
        border-radius: 6px;
        font-size: 15px;
        font-weight: 500;
    }
</style>

<main>
    <!--? Hero Start -->
    <div class="slider-area2">
        <div class="slider-height2 d-flex align-items-center">
            <div class="container">
                <div class="row">
                    <div class="col-xl-12">
                        <div class="hero-cap hero-cap2 pt-70">
                            <h2>Change Password</h2>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <!-- Hero End -->

    <!--? Contact Area start -->
    <section class="contact-section">
        <div class="container">
            <div class="row">
                <div class="col-12">
                    <h2 style="color:white;" class="contact-title">Change Your Password</h2>
                </div>

                <div class="col-lg-8">
                    <form class="form-contact contact_form" asp-action="ChangePassword" method="post">
                        @Html.AntiForgeryToken()

                        <div asp-validation-summary="ModelOnly" class="alert alert-danger mt-2"
                             style="font-size: 18px; font-weight: 500;"></div>

                        <div class="row">
                            <input type="hidden" asp-for="Token" />

                            <div class="col-12">
                                <div class="form-group">
                                    <label style="color:white;" asp-for="Email" class="control-label"></label>
                                    <input style="color:white;" asp-for="Email" class="form-control" readonly />
                                </div>
                            </div>

                            <div class="col-12">
                                <div class="form-group">
                                    <label style="color:white;" asp-for="NewPassword" class="control-label"></label>
                                    <input style="color:white;" asp-for="NewPassword" class="form-control" />
                                    <span asp-validation-for="NewPassword" class="text-danger"></span>
                                </div>
                            </div>

                            <div class="col-12">
                                <div class="form-group">
                                    <label style="color:white;" asp-for="ConfirmPassword" class="control-label"></label>
                                    <input style="color:white;" asp-for="ConfirmPassword" class="form-control" />
                                    <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
                                </div>
                            </div>
                        </div>

                        <div class="col-12" style="padding-left:0">
                            <div class="form-group mt-2">
                                <a asp-controller="Account" asp-action="VerifyEmail"
                                   class="text-decoration-none"
                                   style="color:white; font-size:16px; display:inline-block; margin-top:5px;">
                                    Back
                                </a>
                            </div>
                        </div>

                        <div class="form-group mt-3">
                            <button type="submit" class="button button-contactForm  boxed-btn w-100">Submit</button>
                        </div>
                    </form>
                </div>

                <div class="col-lg-3 offset-lg-1">
                    <div class="media contact-info">
                        <span class="contact-info__icon"><i class="ti-lock"></i></span>
                        <div class="media-body">
                            <h3 style="color:white;">Secure Access</h3>
                            <p>Keep your account safe</p>
                        </div>
                    </div>
                    <div class="media contact-info">
                        <span class="contact-info__icon"><i class="ti-help-alt"></i></span>
                        <div class="media-body">
                            <h3 style="color:white;">Need Help?</h3>
                            <p>Contact our support team anytime</p>
                        </div>
                    </div>
                </div>

            </div>
        </div>
    </section>
    <!-- Contact Area End -->
</main>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
