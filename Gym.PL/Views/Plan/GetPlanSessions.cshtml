@using Gym.BLL.ModelVM.Session

@model IEnumerable<GetSessionVM>

@{
    ViewData["Title"] = "Sessions List";
    var orderedModel = Model.OrderBy(s => s.StartTime).ToList();
}

<style>
  
    body {
        background-color: #0d0d0d; 
        color: #eee;
        font-family: 'Arial', sans-serif;
    }

    .slider-area2 .hero-cap2 h2 {
        color: white;
        text-transform: uppercase;
        font-weight: 800;
        letter-spacing: 2px;
    }


    .table-container {
        padding: 30px;
        background: #1a1a1a; 
        border-radius: 15px;
        box-shadow: 0 5px 20px rgba(0, 0, 0, 0.5);
    }

    .sessions-table {
        width: 100%;
        border-collapse: separate;
        border-spacing: 0;
        margin-top: 20px;
    }

        .sessions-table thead th {
            background-color: #ff3b3b;
            color: white;
            padding: 15px;
            text-align: center;
            text-transform: uppercase;
            font-weight: bold;
            letter-spacing: 0.5px;
            border: none;
            font-size: 14px;
        }

        .sessions-table tbody tr {
            background-color: #222;
            transition: background-color 0.3s ease;
        }

            .sessions-table tbody tr:nth-child(even) {
                background-color: #1a1a1a;
            }

            .sessions-table tbody tr:hover {
                background-color: #333;
            }

        .sessions-table tbody td {
            padding: 15px;
            text-align: center;
            border-bottom: 1px solid #333;
            color: #ccc;
            vertical-align: middle;
            font-size: 15px;
        }

        .sessions-table thead tr:first-child th:first-child {
            border-top-left-radius: 10px;
        }

        .sessions-table thead tr:first-child th:last-child {
            border-top-right-radius: 10px;
        }

    .status-badge {
        font-size: 14px;
        padding: 8px 15px;
        border-radius: 30px;
        font-weight: 700;
        text-transform: uppercase;
        min-width: 100px;
        display: inline-block;
        box-shadow: 0 2px 5px rgba(0, 0, 0, 0.4);
    }

    .status-Scheduled {
        background-color: #ffaa3b;
        color: #1a1a1a;
        box-shadow: 0 2px 5px rgba(255, 170, 59, 0.3);
    }

    .status-Active {
        background-color: #4CAF50;
        color: white;
        box-shadow: 0 2px 5px rgba(76, 175, 80, 0.4);
    }

    .status-Completed {
        background-color: #666;
        color: white;
        box-shadow: 0 2px 5px rgba(102, 102, 102, 0.4);
    }

    .status-Cancelled {
        background-color: #ff3b3b;
        color: white;
        box-shadow: 0 2px 5px rgba(255, 59, 59, 0.4);
    }

    #noSessionsMsg {
        color: #888;
        font-size: 20px;
        text-align: center;
        margin-top: 40px;
        font-weight: 300;
    }
</style>

<main id="pageContent">

    <div class="slider-area2">
        <div class="slider-height2 d-flex align-items-center">
            <div class="container">
                <div class="row">
                    <div class="col-xl-12">
                        <div class="hero-cap hero-cap2 pt-70">
                            <h2>Plan Sessions</h2>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <section class="contact-section">
        <div class="container">

            @if (!Model.Any())
            {
                <div id="noSessionsMsg" class="text-center">
                    <i class="fa fa-calendar-times-o" aria-hidden="true" style="font-size: 40px; margin-bottom: 10px; display:block;"></i>
                    No sessions found for this plan.
                </div>
            }
            else
            {
                <div class="table-container">
                    <table class="sessions-table">
                        <thead>
                            <tr>
                                <th>Session Name</th>
                                <th>Start Time</th>
                                <th>End Time</th>
                                <th>Status</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in orderedModel)
                            {
                                <tr>
                                    <td>@item.Name</td>
                                    <td>@item.StartTime.ToString("MMM dd, yyyy | h:mm tt")</td>
                                    <td>@item.EndTime.ToString("MMM dd, yyyy | h:mm tt")</td>
                                    <td>
                                        @{
                                            string statusClass = $"status-{(item.Status ?? "Scheduled").Replace(" ", "").Replace("/", "")}"; 
                                        }
                                        <span class="status-badge @statusClass">
                                            @item.Status
                                        </span>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            }
        </div>
    </section>

</main>